<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBiometrics"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/addBiometrics"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/addBiometricsImageView"
                android:contentDescription="Button to add a biometrics"
                android:src="@drawable/accept_sign"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/AppYellow"
            android:layout_marginTop="10dp"
            android:id="@+id/biometricsAddHeight"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <EditText
                android:theme="@style/AppYellow"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:hint="@string/height"
                android:digits="0123456789"
                android:inputType="number"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/AppYellow"
            android:id="@+id/biometricsAddWeight"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <EditText
                android:theme="@style/AppYellow"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:hint="@string/weight"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/AppYellow"
            android:id="@+id/biometricsAddAge"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <EditText
                android:theme="@style/AppYellow"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:hint="@string/age"
                android:digits="0123456789"
                android:inputType="number"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

                <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sex"/>
        <Spinner
            android:id="@+id/sexSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppYellow"
            android:prompt="@string/sex"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/motivationText"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>
</LinearLayout>
