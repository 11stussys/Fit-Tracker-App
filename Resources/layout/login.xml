<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerbackground"
    android:padding="16dp"
    android:minWidth="25px"
    android:minHeight="25px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.20">

        <ImageView
            android:id="@+id/logoImageView"
            android:src="@drawable/logo"
            android:contentDescription="@string/logo_description"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="0.65">

        <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/AppYellow"
            android:layout_marginTop="10dp"
            android:id="@+id/emailLoginText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <EditText
                android:theme="@style/AppYellow"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
            />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/AppYellow"
            android:id="@+id/passwordLoginText"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <EditText
                android:theme="@style/AppYellow"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
            />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/loginButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="45dp"
            android:text="@string/login"
            android:textSize="16dp"
            android:background="@drawable/roundbutton"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:layout_width="300dp"/>

        <Button
            android:id="@+id/signUpButton"
            android:background="@drawable/roundbutton"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_height="45dp"
            android:layout_width="300dp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="@string/signup"/>

        <TextView
            android:text="@string/using_socials"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/googleLoginImageView"
            android:src="@drawable/google_icon"
            android:layout_marginHorizontal="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/facebookLoginImageView"
            android:src="@drawable/facebook_icon"
            android:layout_marginHorizontal="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/linkedinLoginImageView"
            android:src="@drawable/linkedin_icon"
            android:layout_marginHorizontal="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/twitterLoginImageView"
            android:src="@drawable/twitter_icon"
            android:layout_marginHorizontal="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
